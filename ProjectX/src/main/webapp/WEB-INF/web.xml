<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee https://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

<!-- 프로젝트 실행 시 첫 화면 설정 -->
	<display-name>Board</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<!-- Servlet의 인코딩 설정 -->
	<filter>
		<filter-name>characterEncoding</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	
<!-- 	Controller용 인코딩 -->
	<filter-mapping>
		<filter-name>characterEncoding</filter-name>
 		<url-pattern>*.do</url-pattern>
 		<url-pattern>*.ad</url-pattern>
 		<url-pattern>*.me</url-pattern>
 		<url-pattern>*.co</url-pattern>
 		<url-pattern>*.bo</url-pattern>
	</filter-mapping>
	
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:applicationContext.xml</param-value>
	</context-param>
	
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
	
	
	
	<!-- DispatcherServlet-RecruitController 생성 -->
	<servlet>
		<servlet-name>action1</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>	
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/config/presentation-layer.xml</param-value>
		</init-param>
	</servlet>
	<!-- 	DispatcherServlet-RecruitController용 경로 -->
	<servlet-mapping>
		<servlet-name>action1</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	
	
	
	<!-- DispatcherServlet-AdminController 생성 -->
	<servlet>
		<servlet-name>action2</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>	
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/config/presentation-layer.xml</param-value>
		</init-param>
	</servlet>
	<!-- 	DispatcherServlet-AdminController용 경로 -->
	<servlet-mapping>
		<servlet-name>action2</servlet-name>
		<url-pattern>*.ad</url-pattern>
	</servlet-mapping>
	
	
	
	<!-- DispatcherServlet-MemberController 생성 -->
	<servlet>
		<servlet-name>action3</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>	
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/config/presentation-layer.xml</param-value>
		</init-param>
	</servlet>
	<!-- 	DispatcherServlet-MemberController용 경로 -->
	<servlet-mapping>
		<servlet-name>action3</servlet-name>
		<url-pattern>*.me</url-pattern>
	</servlet-mapping>

	
	
	<!-- DispatcherServlet-CompanyController 생성 -->
	<servlet>
		<servlet-name>action4</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>	
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/config/presentation-layer.xml</param-value>
		</init-param>
	</servlet>
<!-- 	DispatcherServlet-CompanyController용 경로 -->
	<servlet-mapping>
		<servlet-name>action4</servlet-name>
		<url-pattern>*.co</url-pattern>
	</servlet-mapping>
	
	<!-- DispatcherServlet-BoardController 생성 -->
	<servlet>
		<servlet-name>action5</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>	
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/config/presentation-layer.xml</param-value>
		</init-param>
	</servlet>
<!-- 	DispatcherServlet-BoardController용 경로 -->
	<servlet-mapping>
		<servlet-name>action5</servlet-name>
		<url-pattern>*.bo</url-pattern>
	</servlet-mapping>
	
	
	<!-- <mvc:resources location="/resources/css/" mapping="/css/**"/> -->
	<context-param>
	  	<param-name>log4jConfigLocation</param-name>
	  	<param-value>log4j.xml</param-value>
	</context-param>
	
	<!-- 세션 시간 정하기(분 단위) -->
	<session-config>
    	<session-timeout>120</session-timeout>
	</session-config>
	
	
</web-app>







